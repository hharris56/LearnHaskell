#!/bin/bash

# Hunter Harris
# Custom Prompts for BASH

### GIT FUNCTIONALITY ### 

# returns if directory is in a git repo
inRepo() {
  d=`pwd`
  while [ "$d" != "" ]; do
    [ -d "$d"/.git ] && echo 0 && return
    d=${d%/*}
  done
  echo 1 && return 1
}

# return branch name if cwd is a git repository
getBranch() {
  if [ $(inRepo) == 0 ]; then
    branch_name="$(git symbolic-ref HEAD)"
    branch_name=${branch_name##refs/heads/}
    printf "\e[33m($branch_name)\e[0m";
  else
    printf "";
  fi
}

### Expression Prompt ###

# returns expression based on previous command exit code
getExpression() {
  if [ $? == 0 ]; then
    printf "\e[1;32m(✿◠‿◠)\e[0m";
  else
    printf "\e[1;31m(-_-;)\e[0m";
  fi
}

expressionPrompt="\n \$(getExpression) || \e[1m\w\e[0m \$(getBranch) \n\e[1;37m -> \e[0m"

# set prompt
# export PS1="\n \$(getExpression) || \e[1m\w\e[0m \$(getBranch) \n\e[1;37m -> \e[0m"
export PS1=$expressionPrompt


